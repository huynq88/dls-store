{% extends "../layout/layout.twig" %}
{% block pageTitle %}Category {% endblock %}
{% block pageDes %}{{ slogan }}{% endblock %}
{% block page %}
    <div id="page_category" class="page_main">
        {% include "../layout/header.twig" %}
        <div class="main_body">
            {% include "../layout/breadcrum.twig" %}
            <div class="page_name">
                <h2 class="page_title">Best Sellers</h2>
            </div>
            <div class="product_sort">
                <div class="row">
                    <div class="col-md-3">

                    </div>
                    <div class="col-md-3">
                        View: 20 / 400
                    </div>
                    <div class="col-md-3">
                        <div class="select_wrap">
                            <select name="" id="" class="select_common">
                                <option>Price lowest first</option>
                                <option>Price lowest first</option>
                                <option>Price lowest first</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                {% include "../component/category_banner.twig" %}
                <div class="row mb-5 product_list">
                    {% for i in 0..11 %}
                        <div class="col-6 col-lg-3 product_item">
                            <a href="#" class="product_item_thumb" title="">
                                <img src="https://via.placeholder.com/500x500" alt=""/>
                            </a>
                            <h3 class="product_item_name">
                                <a href="#" title="Product Name">Product Name</a>
                            </h3>
                            <div class="product_item_price">$00.00</div>
                        </div>
                    {% endfor %}
                </div>
                {% include "../component/pagination.twig" %}
            </div>
        </div>
        {% include "../layout/footer/footer.twig" %}
    </div>
{% endblock %}

